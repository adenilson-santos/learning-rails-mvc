<p id="notice"><%= notice %></p>

<strong><%= date_format Date.today, 'br' %></strong>

<h1>Coins</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Acronym</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.title %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.image_url %></td>
        <td><%= link_to 'Show', coin %></td>
        <td><%= link_to 'Edit', edit_coin_path(coin) %></td>
        <td><%= link_to 'Destroy', coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coin', new_coin_path %>
